# ===========================================
# Flask Application Configuration
# ===========================================
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# ===========================================
# Database Configuration
# ===========================================
# MySQL Database Connection (for application)
SQLALCHEMY_DATABASE_URI=mysql+pymysql://username:password@host:port/database
SQLALCHEMY_TRACK_MODIFICATIONS=1

# MySQL Database Credentials (for Docker)
MYSQL_ROOT_PASSWORD=your_mysql_root_password
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password
MYSQL_HOST=localhost
MYSQL_PORT=3306

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===========================================
# Admin/API Authentication
# ===========================================
# Admin account credentials for web interface
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_admin_password

# ===========================================
# CTF System Configuration
# ===========================================
# API credentials for participant node communication
# If not set, will use ADMIN_USERNAME and ADMIN_PASSWORD
API_USERNAME=your_api_username
API_PASSWORD=your_api_password

# ===========================================
# Docker Environment Variables
# ===========================================
# Project name for Docker Compose
COMPOSE_PROJECT_NAME=adctf